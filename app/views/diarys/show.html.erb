<% content_for :page_title, @diary.title %>

<section class="section">
	<div class="container">
		<nav class="level">
		  <!-- Left side -->
		  <div class="level-left">
		    <p class="level-item">
		        <strong>Actions</strong>
		    </p>
		  </div>
		  <!-- Right side -->
		  <div class="level-right">
		  	<p class="level-item">
		    	<%= link_to "Edit", edit_diary_path(@diary), class:"button" %>
		  	</p>
		  	<p class="level-item">
				<%= link_to "Delete", diary_path(@diary), method: :delete, data: { confirm: "Are you sure?" }, class:"button is-danger" %>
				</p>
		  </div>
		</nav>
		<hr/>

		<div class="content">
			<%= @diary.expiration %>
            <%= @diary.kind %>
		</div>
	</div>
</section>

<section class="section notes">
	
	<div class="container">
		<h2 class="subtitle is-5"><strong><%= @diary.notes.count %></strong> Notes</h2>
		<%= render @diary.notes %>
		<div class="note-form">
			<hr />
			<h3 class="subtitle is-3">Post your note</h3>
	 		<%= render 'notes/form' %>
		</div>
	</div>
</section>